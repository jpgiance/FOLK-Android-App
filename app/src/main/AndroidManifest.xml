<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jorgegiance.folk">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity android:name=".ui.activities.DetailHomeActivity"
            android:theme="@style/FolksThemeWhite"/>
        <activity
            android:name=".ui.activities.UserActivity"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/FolksThemeDark"/>
        <activity android:name=".ui.activities.HomeActivity"
            android:theme="@style/FolksThemeDark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.PeopleActivity"
            android:theme="@style/FolksThemeDark"/>
    </application>

</manifest>