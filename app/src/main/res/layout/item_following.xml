<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/image_following"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_gravity="left"
        android:scaleType="centerCrop"
        android:src="@drawable/trump"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:text="Donald Trump"
        app:layout_constraintStart_toEndOf="@+id/image_following"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/state_party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FL - Rep."
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/name_following"
        app:layout_constraintTop_toBottomOf="@+id/name_following" />

    <TextView
        android:id="@+id/current_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="President of the United States"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/name_following"
        app:layout_constraintTop_toBottomOf="@+id/state_party" />

    <ImageButton
        android:id="@+id/delete_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/fui_transparent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>